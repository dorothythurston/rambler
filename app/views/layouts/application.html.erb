<!DOCTYPE html>
<html>
  <head>
    <title>rambler</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>
  <body>
    <div id='outer-wrapper'>
      <%= render "header" %>

      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>">
            <%= value %>
          </div>
        <% end %>
      </div>

      <div id="main-content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
